<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.apprade"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="18" />
    
    
    <!-- PERMISOS DE INTERNET Y MAPAS -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    
    <!-- PERMISOS PARA EL GEOPOSICIONAMIENTO -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    
    
    <!-- PARA LA USAR GOOGLE MAPS V2 -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
           
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- GOOGLE API KEY GENERADO -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDclT_TBXcH6HYB5RbRaWW9mdaH-DpO05Q" />
        
        <meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />   		   		    
        
        <activity
            android:name="com.apprade.activity.App_Splash_Activity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.apprade.activity.Usuario_Registro_Activity" ></activity>
        
        <activity android:name="com.apprade.activity.Usuario_Login_Activity"></activity>
        
        <activity android:name="com.apprade.activity.App_GPSMapa_Activity"></activity>
        
        
        
    </application>

</manifest>
