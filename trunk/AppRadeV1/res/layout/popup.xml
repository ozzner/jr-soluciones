<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:background="@drawable/edit_text_shape"
    android:orientation="vertical" 
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lay_btn_comen"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_cancel_comen"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/ic_action_cancel"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_est_datos"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_nom_establecimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PARDOS CHICKEN S. A."
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/txt_distrito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="San Borja"
                    android:textColor="#000" />

                <ImageView
                    android:id="@+id/iv_no_hay_cola"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/check_user"
                    android:layout_marginTop="10dip" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_comen_insertar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/et_comentario"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dip"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:background="@drawable/edit_text_shape"
                     android:drawableLeft="@drawable/registro" >

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/iv_enviar_comentario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/registro" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_comen_listar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ListView
                            android:id="@+id/lv_comentarios"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             >

                        </ListView>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
