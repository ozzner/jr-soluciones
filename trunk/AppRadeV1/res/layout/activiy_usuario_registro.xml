<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/ScrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/lay_contenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp" >

            <LinearLayout
                android:id="@+id/lay_personales"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7.5dp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:padding="7.5dp" >

                <EditText
                    android:id="@+id/et_nombres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombres"
                    android:inputType="textPersonName" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/et_paterno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Apellidos"
                    android:inputType="textPersonName" />

                <LinearLayout
                    android:id="@+id/lay_sexo_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/lay_sexo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <RadioButton
                            android:id="@+id/rb_masculino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masculino" />

                        <RadioButton
                            android:id="@+id/rb_femenino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Femenino" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_sesion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7.5dp"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:padding="7.5dp" >

                <EditText
                    android:id="@+id/et_correo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Correo electrÃ³nico"
                    android:inputType="textEmailAddress" />

                <EditText
                    android:id="@+id/et_password_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingrese password"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/et_pass_confirmar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Confirme password"
                    android:inputType="textPassword" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_enviar"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:drawableLeft="@drawable/send"
                android:text="Enviar" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>