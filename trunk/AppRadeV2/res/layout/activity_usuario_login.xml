<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingBottom="40dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="60dp" >

            <ImageView
                android:id="@+id/img_check_user"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@drawable/check" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="75dp"
                android:fontFamily="Trebuchet MS"
                android:hint="login@apprade.com"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:ems="10"
                android:fontFamily="Trebuchet MS"
                android:hint="Password"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnLogin"
                style="@style/button_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="55dp"
                android:background="@drawable/boton_formato_estandar"
                android:fontFamily="Trebuchet MS"
                android:onClick="btnLogin_onClick"
                android:text="Login"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <com.google.android.gms.common.SignInButton
                    android:id="@+id/btn_sign_in"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.facebook.widget.LoginButton
                    android:id="@+id/authButton"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Facebook"
                 />

                <!-- <Button -->
                <!-- android:id="@+id/btn_logout_google" -->
                <!-- android:layout_width="match_parent" -->
                <!-- android:layout_height="match_parent" -->
                <!-- android:layout_weight="1" -->
                <!-- android:fontFamily="Trebuchet MS" -->
                <!-- android:text="Facebook" -->
                <!-- android:textSize="14dp"/> -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>