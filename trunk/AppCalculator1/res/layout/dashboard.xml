<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/background3"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnProtenia"
                    style="@style/dashboard_button_center"
                    android:drawableTop="@drawable/ic_action_call"
                    android:onClick="btn1_onClick"
                    android:text="@string/Ope_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnHumendad"
                    style="@style/dashboard_button_center"
                    android:drawableTop="@drawable/ic_action_go_to_today"
                    android:onClick="btn2_onClick"
                    android:text="@string/Ope_2" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnGrasa"
                    style="@style/dashboard_button_center"
                    android:drawableTop="@drawable/ic_action_good"
                    android:onClick="btn3_onClick"
                    android:text="@string/Ope_3" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnFibra"
                    style="@style/dashboard_button_center"
                    android:drawableTop="@drawable/ic_action_new_label"
                    android:onClick="btn4_onClick"
                    android:text="@string/Ope_4" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn5"
                    style="@style/dashboard_button_center"
                    android:drawableTop="@drawable/ic_action_undo"
                    android:onClick="btn5_onClick"
                    android:text="@string/Ope_5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>